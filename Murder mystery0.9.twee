// Add class on passage start so CSS can target the Start screen
$(document).on(':passagestart', function (ev) {
  if (ev.passage.title === "Start") {
    $('body').addClass('start-screen');
  } else {
    $('body').removeClass('start-screen');
  }
});

// Suspect Bios
$(document).on("click", ".suspect-button", function() {
    // Hide all bios first
    $(".suspect-bio").hide();
    // Show the one linked to this button
    const target = $(this).data("target");
    $("#" + target).slideDown(300);
});

// Accordion
$(document).on("click", ".accordion", function () {
  $(this).toggleClass("active");
  const panel = $(this).next(".panel");
  panel.slideToggle();
});

