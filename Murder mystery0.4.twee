@import url('https://fonts.googleapis.com/css2?family=Cinzel+Decorative&family=Libre+Baskerville&display=swap');

.start-menu {
  display: flex;
  justify-content: center; /* center the buttons horizontally */
  gap: 0.5em; /* space between buttons */
  flex-wrap: wrap; /* allow wrapping on small screens */
  margin-top: 2em;
}

/* Base page styling */
body {
  background-color: #1C1B1A;
  color: #EDEAE5;
  font-family: 'Libre Baskerville', serif;
  font-size: 150%;
}
 
/* hide ui-bar and change margin, center text */
#ui-bar {
  display: none;
}
 
#story {
  margin-left: 0;
}
 
#passages {
  max-width: 800px;
  margin: 2em auto;
  padding: 0 1em;
}
 
.passage {
  margin: 0;
  padding: 0;
  text-align: center;
}
 
/* Global headings */
h1 {
  font-family: 'Cinzel Decorative', serif;
  color: #fffff0 ;
  text-align: center;
}
 
/* Button styling */
/* Button styling */
.button {
  padding: 0.8em 1.2em;
  background-color: #1C1B1A;
  color: #C89F65;
  border: 2px solid #C89F65;
  text-align: center;
  text-decoration: none;
  font-family: 'Libre Baskerville', serif;
  font-size: 100%;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.1s ease;
}

.button:hover {
  background-color: #c69d63;
  color: #EDEAE5;
  border: 2px solid #C89F65;
}

.button:active {
  background-color: #C89F65;
  color: #1C1B1A;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}

/* border */
.silent-movie-frame {
  position: relative;
  background-color: #1C1B1A;
  color: #fffff0;
  padding: 30px;
  border: 10px solid white;
  max-width: 800px;
  margin: 0 auto;
}
 
.corner {
  position: absolute;
  width: 50px;
  height: 50px;
  background-size: contain;
  background-repeat: no-repeat;
  z-index: 2;
  pointer-events: none;
}
 
.corner.tl {
  top: -10px;
  left: -10px;
  background-image: url("https://github.com/Susanne404/Murdered-In-Plain-Text/blob/main/Images/Border/TopLeft.png");
}
.corner.tr {
  top: -10px;
  right: -10px;
  background-image: url("https://github.com/Susanne404/Murdered-In-Plain-Text/blob/main/Images/Border/TopRight.png");
  transform: scaleX(-1);
}
.corner.bl {
  bottom: -10px;
  left: -10px;
  background-image: url("https://github.com/Susanne404/Murdered-In-Plain-Text/blob/main/Images/Border/BottomLeft.png");
  transform: scaleY(-1);
}
.corner.br {
  bottom: -10px;
  right: -10px;
  background-image: url("https://github.com/Susanne404/Murdered-In-Plain-Text/blob/main/Images/Border/BottomRight.png");
  transform: scale(-1, -1);
}
 
.inner {
  position: relative;
  z-index: 1;
}

/* Suspect buttons container */
.suspect-menu {
  display: flex;
  justify-content: center; /* center buttons */
  gap: 0.5em;
  flex-wrap: wrap; /* wrap on small screens */
  margin-bottom: 1em;
}

/* Style the buttons that are used to open and close the accordion panel */
.accordion {
  background-color: #1C1B1A;
  color: #C89F65;
  cursor: pointer;
  padding: 12px;
  width: 100%;
  text-align: left;
  border: none;
  outline: none;
  transition: background-color 0.3s;
  margin-bottom: 5px;
}

/* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
.active, .accordion:hover {
  background-color: #C89F65;
}

/* Style the accordion panel. Note: hidden by default */
.panel {
  padding: 0 12px;
  background-color: #c69d63;
  max-height: 0;
  display: none;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
  border-left: 2px solid #ccc;
  border-right: 2px solid #ccc;
  border-bottom: 2px solid #ccc;
}

.accordion:after {
  content: '\02795'; /* Unicode character for "plus" sign (+) */
  font-size: 13px;
  color: #777;
  float: right;
  margin-left: 5px;
}

.active:after {
  content: "\2796"; /* Unicode character for "minus" sign (-) */
}


